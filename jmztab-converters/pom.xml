            <artifactId>jmzidentml</artifactId>
            <version>${uk.ac.ebi.jmzidml-jmzidentml.version}</version>
        </dependency>
    </dependencies>

    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
    </build>
